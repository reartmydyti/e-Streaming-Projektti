@model IEnumerable<MovieDB.Models.Director>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped text-white">
    <thead >
        <tr class="table table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.Director_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionaliteti_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Director_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionaliteti_ID)
            </td>

            <td class="text-right">
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Director_ID"><i class="fas fa-list">Edit</i></a> 
                <a class="btn btn-primary"asp-action="Details" asp-route-id="@item.Director_ID"><i class="fas fa-edit">Details</i></a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Director_ID"><i class="fas fa-trash">Delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
